<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LRegisterPagge.MainPage">

    <ScrollView>

        <StackLayout>
            <Grid VerticalOptions="CenterAndExpand" RowDefinitions="*" ColumnDefinitions="auto,*" Margin="20">
                <Label x:Name="label1" Grid.Row="0" Grid.Column="1" HorizontalOptions="CenterAndExpand" Margin="0,20,0,-30"/>
                <Slider x:Name="slider1" Grid.Row="0" Grid.Column="1" HorizontalOptions="FillAndExpand"/>
                <Label x:Name="label2" Grid.Row="1" Grid.Column="2" HorizontalOptions="CenterAndExpand" Margin="0,40,0,-30"/>

            </Grid>


        </StackLayout>
    </ScrollView>

</ContentPage>
